@model IEnumerable<ActorServiceModel>

@{
	ViewBag.title = "Our Actors";
}

<h2>@ViewBag.title</h2>

@for(int i = 0; i < Model.Count(); i++)
{
	<div class="card" style="width: 18rem;">
		<img class="card-img-top" src="@Model.ElementAt(i).ActorImageUrl" alt="Card image cap">
		<div class="card-body">
			<h5 class="card-title">@Model.ElementAt(i).FullName</h5>
			<p class="card-text">@Model.ElementAt(i).Description</p>
			@*Add A link to details page when made*@
		</div>
	</div>
}